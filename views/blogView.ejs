<%- include('partials/header', { title: blog.title, user: user }) %>

<main class="blog-view-container">
    <h1><%= blog.title %></h1>
    <div class="blog-metadata">
        <!-- Assuming the author's username is populated on the blog object -->
        <small>By: <%= blog.author.username %></small>
        <small>Published on: <%= blog.createdAt.toDateString() %></small>
    </div>
    <!-- The <%- %> syntax is used to render unescaped HTML. We will secure this later. -->
    <p><%- blog.content %></p>
</main>

<%- include('partials/footer') %>